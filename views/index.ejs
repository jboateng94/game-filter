<!DOCTYPE html>
<html ng-app="gameFilter">
<head>
	<title>GameFilter</title>

	
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular.js/1.4.0/angular.min.js"></script>
	<script src="//cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>
	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-resource.js"></script>

	<script src="https://www.gstatic.com/firebasejs/3.6.6/firebase.js"></script>
  	<script src="https://cdn.firebase.com/libs/angularfire/2.3.0/angularfire.min.js"></script>

	<script src="/js/app.js"></script>

  	<script src="js/factories/auth.fact.js"></script>
  	<script src="js/factories/user.fact.js"></script>
  	<script src="js/factories/game.fact.js"></script>
  	<script src="js/controllers/auth.ctrl.js"></script>
  	<script src="js/controllers/game.ctrl.js"></script>

  	<script src="https://use.fontawesome.com/597dd18707.js"></script>

  	<script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>

  	<!-- Compiled and minified CSS -->
  	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/css/materialize.min.css">

  	<!-- Compiled and minified JavaScript -->
  	<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.0/js/materialize.min.js"></script>

  	<script src="/js/sidenav.js"></script>

  	<link href="https://fonts.googleapis.com/css?family=Londrina+Outline|Nunito" rel="stylesheet">

	<link rel="stylesheet" type="text/css" href="/css/style.css">

	<link rel="shortcut icon" type="image/png" href="https://downloadgamesfree.mobi/favicon.png">
</head>

<body ng-controller='authController as auth'>

	<nav class="navbar" class="nav-extend">
	  <ul id="slide-out" class="side-nav">
	    <li><div class="userView" ng-if="auth.user">
	      <div class="background">
	      	<img src="https://thngs-images.s3.amazonaws.com/04/22/2015/522dde3a-0d38-47fe-804b-5572b846e492.png">
	      </div>
	      <!-- <a href="#!user"><img class="circle" src=""></a> -->
		  <a href="#!name"><span class="white-text name">John Doe</span></a>
		  <a href="#!email"><span class="white-text email">jdandturk@gmail.com</span></a>
		</div></li>

		<li><div class="userView" ng-if="!auth.user">
	      <div class="background">
	      	<img src="https://thngs-images.s3.amazonaws.com/04/22/2015/522dde3a-0d38-47fe-804b-5572b846e492.png">
	      </div>
	      <p>Please log in to view the app</p>
		</div></li>

		<li ng-if="!auth.user"><a href="#" ui-sref='login'> Log in</a></li>
	    <li ng-if="!auth.user"><a href="#" ui-sref='signup'> Signup</a></li>

		<li ng-if="auth.user"><a href="#" ui-sref='home'><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
		<li ng-if="auth.user"><a href="#" ui-sref="users"><i class="fa fa-user" aria-hidden="true"></i> Profile</a></li>
		<li ng-if="auth.user"><a href="#" ng-click="auth.signOut()"><i class="fa fa-sign-out" aria-hidden="true"></i> Log out</a></li>

		<li ><div class="divider"></div></li>
		<li><a class="subheader">Subheader</a></li>
		<li><a class="waves-effect" href="http://www.giantbomb.com">API courtesy of Giant Bomb</a></li>
	  </ul>
	  <div class="navbar-fixed nav-wrapper blue">
	    <a href="#" data-activates="slide-out" class="button-collapse"><i class="fa fa-bars" aria-hidden="true"></i></a>

	    <div class="app-logo">
	  		<i class="logo left fa fa-gamepad fa-3x" aria-hidden="true"></i>
	  		<h4 class="left">GameFilter</h4>
	  	</div>
	    
	    <ul id="nav-mobile" class="right hide-on-med-and-down" ng-if="auth.user">
	      <li><a href="#" ui-sref='home'><i class="fa fa-home" aria-hidden="true"> </i> Home</a></li>
	      <li><a href="#" ui-sref="users"><i class="fa fa-user" aria-hidden="true"> </i> Profile</a></li>
	      <li><a href="#" ng-click="auth.signOut()"><i class="fa fa-sign-out" aria-hidden="true"> </i> Log out</a></li>
	    </ul>

	    <ul id="nav-mobile" class="right hide-on-med-and-down" ng-if="!auth.user">
	      <li><a href="#" ui-sref='login'> Log in</a></li>
	      <li><a href="#" ui-sref='signup'> Signup</a></li>
	    </ul>
	  </div>
	</nav>

	<section ui-view> 
    <!-- views get rendered here  -->
  	</section>

</body>
</html>